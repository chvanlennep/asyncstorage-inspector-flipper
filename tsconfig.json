{
  "lib": ["es2018"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "rules": {
    "ordered-imports": [false],
    "object-literal-sort-keys": [false]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
